<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ContextMonitoringApp2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryVariantColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primaryVariantColor</item>
        <item name="android:navigationBarColor">@color/backgroundColorDark</item>

        <!-- Background and surface colors. -->
        <item name="backgroundColor">@color/backgroundColorDark</item>
        <item name="colorSurface">@color/surfaceColorDark</item>

        <!-- Text color. -->
        <item name="android:textColor">@android:color/white</item>

        <!-- Apply rounded corners to views. -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
    </style>

    <style name="Theme.ContextMonitoringApp2" parent="Base.Theme.ContextMonitoringApp2" />
</resources>
